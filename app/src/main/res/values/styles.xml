<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MainToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_black_24dp</item>
    </style>


    <!--日间模式-->
    <style name="DayTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="clockBackground">@color/base_white</item>
        <item name="clockBarBackground">@color/colorPrimary</item>
        <item name="clockTextColor">@android:color/black</item>
        <item name="clockTextColor2">@color/color868686</item>
    </style>

    <!--夜间模式-->
    <style name="NightTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/color3F3F3F</item>
        <item name="colorPrimaryDark">@color/color3A3A3A</item>
        <item name="colorAccent">@color/color868686</item>
        <item name="clockBackground">@color/color3F3F3F</item>
        <item name="clockBarBackground">@color/color3F3F3F</item>
        <item name="clockTextColor">@color/base_white</item>
        <item name="clockTextColor2">#EFEFEF</item>
    </style>


</resources>
